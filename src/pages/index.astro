---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

// ★ここに自分のプロフィール画像のパスを指定
import profileImage from '../assets/profile.jpg';

// ブログ記事を取得し、新しい順に並べ替えて「最新の3件」だけ取り出す
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 3);
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="hero-container">
				<div class="hero-content">
					<span class="greeting">Hello, I'm Keitaro.</span>
					
					<div class="typewriter-container">
						<span class="fixed-text">I'm a </span>
						<span id="typewriter-text" class="typing-text"></span>
						<span class="cursor">|</span>
					</div>

					<h1>Web Dev &<br/>Engineering</h1>
					<p class="bio">
						早稲田大学 基幹理工学部 情報通信学科 2年<br/>
						<strong>植木 敬太郎 (Keitaro Ueki)</strong>
					</p>
					<p class="description">
						人力飛行機・数値解析・ガジェットが好き。<br/>
						日々の学習記録や開発ログをまとめています。
					</p>
					
					<div class="links">
						<a href="/about" class="button primary">経歴・スキルを見る</a>
						<a href="/publications" class="button secondary">研究業績</a>
					</div>
				</div>
				
				<div class="hero-visual">
					<div class="image-wrapper">
						<Image 
							src={profileImage} 
							alt="Keitaro Ueki" 
							width={280} 
							height={280} 
							class="profile-img" 
							loading="eager"
						/>
					</div>
				</div>
			</div>

			<hr class="divider" />

			<section class="latest-section">
				<div class="section-header">
					<h2>Latest Updates</h2>
					<a href="/blog" class="view-all">すべて見る &rarr;</a>
				</div>
				
				<div class="card-grid">
					{posts.map((post) => (
						<a href={`/blog/${post.slug}/`} class="card">
							<div class="card-image">
								{post.data.heroImage ? (
									<Image src={post.data.heroImage} width={400} height={200} alt="" />
								) : (
									<div class="no-image">No Image</div>
								)}
							</div>
							<div class="card-content">
								<span class="date">{post.data.pubDate.toLocaleDateString('ja-JP')}</span>
								<h3>{post.data.title}</h3>
							</div>
						</a>
					))}
				</div>
			</section>
		</main>
		<Footer />

		<script>
			const phrases = [
				"Waseda University Student",
				"full-stack engineer",
				"MATLAB enthusiast"
			];
			
			const textElement = document.getElementById('typewriter-text');
			let phraseIndex = 0;
			let charIndex = 0;
			let isDeleting = false;
			let typeSpeed = 100; // 打つ速度

			function type() {
				const currentPhrase = phrases[phraseIndex];
				
				if (isDeleting) {
					textElement.textContent = currentPhrase.substring(0, charIndex - 1);
					charIndex--;
					typeSpeed = 50; // 消す速度
				} else {
					textElement.textContent = currentPhrase.substring(0, charIndex + 1);
					charIndex++;
					typeSpeed = 100; // 打つ速度
				}

				if (!isDeleting && charIndex === currentPhrase.length) {
					// 打ち終わったら少し待機
					isDeleting = true;
					typeSpeed = 2000;
				} else if (isDeleting && charIndex === 0) {
					// 消し終わったら次の言葉へ
					isDeleting = false;
					phraseIndex = (phraseIndex + 1) % phrases.length;
					typeSpeed = 500;
				}

				setTimeout(type, typeSpeed);
			}

			document.addEventListener('DOMContentLoaded', type);
		</script>
	</body>
</html>

<style>
	/* 全体のレイアウト調整 */
	main {
		width: 960px;
		max-width: calc(100% - 2em);
		margin: 0 auto;
		padding: 2em 0;
	}

	/* --- ヒーローセクション --- */
	.hero-container {
		display: flex;
		flex-direction: column-reverse;
		align-items: center;
		gap: 2rem;
		padding: 3rem 0;
		text-align: center;
	}
	
	@media (min-width: 768px) {
		.hero-container {
			flex-direction: row;
			justify-content: space-between;
			text-align: left;
			padding: 5rem 0;
		}
		.hero-content {
			flex: 1;
		}
		.hero-visual {
			flex: 1;
			display: flex;
			justify-content: center;
			align-items: center;
		}
	}

	.greeting {
		color: var(--accent);
		font-weight: bold;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		font-size: 0.9rem;
		display: block;
		margin-bottom: 0.5rem;
	}

	/* ★タイピングアニメーションのスタイル */
	.typewriter-container {
		font-family: 'Courier New', Courier, monospace; /* 等幅フォント */
		font-size: 1.2rem;
		font-weight: bold;
		color: #555;
		margin-bottom: 0.5rem;
		min-height: 1.5em; /* ガタつき防止 */
	}
	.typing-text {
		color: #333;
	}
	.cursor {
		display: inline-block;
		width: 2px;
		background-color: #333;
		animation: blink 1s step-end infinite;
		margin-left: 2px;
	}
	@keyframes blink {
		from, to { opacity: 1; }
		50% { opacity: 0; }
	}

	h1 {
		font-size: 3rem;
		line-height: 1.1;
		margin: 0.2em 0 0.5em 0;
		letter-spacing: -0.02em;
	}

	.bio {
		font-size: 1.1rem;
		font-weight: bold;
		margin-bottom: 0.5em;
	}
	.description {
		color: #666;
		line-height: 1.6;
		margin-bottom: 2rem;
	}

	/* ボタン */
	.links {
		display: flex;
		gap: 1rem;
		justify-content: center;
	}
	@media (min-width: 768px) {
		.links { justify-content: flex-start; }
	}

	.button {
		padding: 0.8rem 1.5rem;
		text-decoration: none;
		border-radius: 50px;
		font-weight: bold;
		transition: all 0.2s ease;
		font-size: 0.95rem;
	}
	.primary {
		background: #222;
		color: #fff;
		box-shadow: 0 4px 10px rgba(0,0,0,0.2);
	}
	.primary:hover {
		background: #444;
		transform: translateY(-2px);
		box-shadow: 0 6px 15px rgba(0,0,0,0.3);
	}
	.secondary {
		background: transparent;
		color: #333;
		border: 1px solid #ddd;
	}
	.secondary:hover {
		background: #f4f4f5;
		border-color: #bbb;
	}

	/* ★画像のスタイル調整 */
	.image-wrapper {
		/* 必要に応じて背景装飾を追加可能 */
		position: relative;
	}
	
	/* AstroのImageコンポーネントに適用されるクラス */
	.profile-img {
		width: 280px;
		height: 280px;
		object-fit: cover;
		border-radius: 50%; /* 丸くする */
		box-shadow: 0 10px 25px rgba(0,0,0,0.15); /* 影をつける */
		border: 4px solid #fff; /* 白い枠線 */
	}

	.divider {
		margin: 3rem 0;
		border: 0;
		border-top: 1px solid #eee;
	}

	/* --- 記事カードグリッド --- */
	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		margin-bottom: 2rem;
	}
	.view-all {
		font-size: 0.9rem;
		color: var(--accent);
		text-decoration: none;
	}
	
	.card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}

	.card {
		text-decoration: none;
		color: inherit;
		background: #fff;
		border-radius: 12px;
		overflow: hidden;
		transition: transform 0.2s, box-shadow 0.2s;
		border: 1px solid #f0f0f0;
	}
	.card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 20px rgba(0,0,0,0.05);
	}

	.card-image {
		width: 100%;
		height: 160px;
		background: #f9f9f9;
		overflow: hidden;
	}
	.card-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	.no-image {
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: #ccc;
		font-size: 0.9rem;
	}

	.card-content {
		padding: 1.2rem;
	}
	.card-content h3 {
		margin: 0.5rem 0 0;
		font-size: 1.1rem;
		line-height: 1.4;
	}
	.date {
		font-size: 0.85rem;
		color: #888;
	}
</style>