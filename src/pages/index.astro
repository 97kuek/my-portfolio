---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import profileImage from "../assets/profile.jpg";
import defaultImage from "../assets/blog-placeholder-new.png";
import { getReadingTime } from "../utils/readingTime";
import PostCard from "../components/PostCard.astro";

// ブログ記事を取得し、新しい順に並べ替えて「最新の3件」だけ取り出す
const posts = (await getCollection("blog"))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);
// 暫定的な型定義
interface BlogPostData {
	title: string;
	pubDate: Date;
	heroImage?: ImageMetadata;
	categories?: string[];
}
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="hero-container">
				<div class="hero-content">
					<span class="greeting">Welcome to my portfolio.</span>

					<div class="typewriter-container">
						<span class="fixed-text">I'm a&nbsp;</span>
						<span id="typewriter-text" class="typing-text"></span>
						<span class="cursor">|</span>
					</div>
					<p class="bio">B2 Waseda FSE Comm.</p>
					<p class="description">
						人力飛行機・数値解析・ガジェットが好き。<br />
						日々の学習記録や開発ログをまとめています。
					</p>

					<div class="links">
						<a href="/about" class="button primary">About me</a>
					</div>
				</div>

				<div
					class="hero-visual fade-in-up"
					style="animation-delay: 0.2s;"
				>
					<div class="image-wrapper animate-float">
						<div class="profile-glow"></div>
						<Image
							src={profileImage}
							alt="97kuek_"
							width={560}
							height={560}
							class="profile-img"
							loading="eager"
						/>
					</div>
				</div>
			</div>

			<hr class="divider" />

			<section class="latest-section">
				<div class="section-header">
					<h2>Latest Updates</h2>
					<a href="/blog" class="view-all">すべて見る &rarr;</a>
				</div>

				<div class="card-grid">
					{
						posts.map((post, index) => {
							return (
								<div
									class="fade-in-up"
									style={`animation-delay: ${0.4 + index * 0.1}s;`}
								>
									<PostCard post={post} />
								</div>
							);
						})
					}
				</div>
			</section>
		</main>
		<Footer />

		<script>
			const phrases = [
				"birdman.",
				"full-stack engineer.",
				"MATLAB enthusiast.",
			];

			let typewriterInterval: number | undefined;
			let timeoutId: number | undefined;

			function startTypewriter() {
				const textElement = document.getElementById("typewriter-text");
				if (!textElement) return;

				// Reset state
				let phraseIndex = 0;
				let charIndex = 0;
				let isDeleting = false;
				let typeSpeed = 100;

				// Clear any previous execution to prevent overlaps
				if (timeoutId) clearTimeout(timeoutId);

				function type() {
					const currentPhrase = phrases[phraseIndex];

					if (textElement) {
						if (isDeleting) {
							textElement.textContent = currentPhrase.substring(
								0,
								charIndex - 1,
							);
							charIndex--;
							typeSpeed = 30; // 消すときは速く
						} else {
							textElement.textContent = currentPhrase.substring(
								0,
								charIndex + 1,
							);
							charIndex++;
							// ランダムな揺らぎを与える
							typeSpeed = 80 + Math.random() * 50;
						}
					}

					if (!isDeleting && charIndex === currentPhrase.length) {
						isDeleting = true;
						typeSpeed = 2000; // 読み終わるまで待機
					} else if (isDeleting && charIndex === 0) {
						isDeleting = false;
						phraseIndex = (phraseIndex + 1) % phrases.length;
						typeSpeed = 500;
					}

					timeoutId = Number(setTimeout(type, typeSpeed));
				}

				type();
			}

			// View Transitions support
			document.addEventListener("astro:page-load", startTypewriter);
		</script>
	</body>
</html>

<style>
	/* 全体のレイアウト調整 */
	main {
		width: 960px;
		max-width: calc(100% - 2em);
		margin: 0 auto;
		padding: 2em 0;
	}

	/* --- ヒーローセクション --- */
	.hero-container {
		display: flex;
		flex-direction: column-reverse;
		align-items: center;
		gap: 3rem;
		padding: 4rem 2rem;
		text-align: center;
		background: #fff;
		border: 1px solid rgba(0, 0, 0, 0.05);
		border-radius: 24px;
		margin-bottom: 4rem;
		box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.05);
	}

	@media (min-width: 900px) {
		.hero-container {
			flex-direction: row;
			justify-content: space-between;
			text-align: left;
			padding: 5rem 3rem;
		}
		.hero-content {
			flex: 1;
		}
		.hero-visual {
			flex: 1;
			display: flex;
			justify-content: center;
			align-items: center;
			perspective: 1000px;
		}
	}

	.greeting {
		color: var(--accent);
		font-weight: 800;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		font-size: 0.9rem;
		display: block;
		margin-bottom: 0.5rem;
	}

	/* ★タイピングアニメーションのスタイル */
	.typewriter-container {
		font-family: "JetBrains Mono", monospace;
		font-size: 1.5rem;
		font-weight: bold;
		color: rgb(var(--gray));
		margin-bottom: 1rem;
		min-height: 1.6em; /* 高さ確保 */
		display: flex;
		align-items: center;
		/* モバイルでの折り返し防止とレイアウト崩れ対策 */
		white-space: nowrap;
		overflow: hidden;
	}

	@media (max-width: 768px) {
		.typewriter-container {
			justify-content: center; /* モバイルでは中央揃え */
			font-size: 1.2rem;
		}
	}

	.typing-text {
		background: var(--primary-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		position: relative;
	}

	.cursor {
		display: inline-block;
		width: 10px;
		height: 1.2em;
		background-color: var(--accent);
		margin-left: 4px;
		animation: blink 1s step-end infinite;
		vertical-align: middle;
	}

	@keyframes blink {
		0%,
		100% {
			opacity: 1;
		}
		50% {
			opacity: 0;
		}
	}

	h1 {
		font-size: 3.5rem;
		line-height: 1.1;
		margin: 0.2em 0 0.5em 0;
		letter-spacing: -0.03em;
		background: var(--primary-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 2.5rem;
		}
		.hero-container {
			padding: 3rem 1.5rem;
		}
	}

	.bio {
		font-size: 1.2rem;
		font-weight: bold;
		margin-bottom: 0.5em;
		color: rgb(var(--gray-dark));
	}
	.description {
		color: rgb(var(--gray));
		line-height: 1.8;
		margin-bottom: 2.5rem;
		font-size: 1.05rem;
	}

	/* ボタン */
	.links {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
	}
	@media (min-width: 768px) {
		.links {
			justify-content: flex-start;
		}
	}

	.button {
		padding: 0.9rem 2rem;
		text-decoration: none;
		border-radius: 50px;
		font-weight: bold;
		transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
		font-size: 1rem;
		letter-spacing: 0.05em;
		position: relative;
		overflow: hidden;
	}
	.primary {
		background: var(--accent);
		color: #fff;
		box-shadow: 0 4px 15px rgba(35, 55, 255, 0.3);
		border: 1px solid transparent;
	}
	.primary:hover {
		background: var(--accent-dark);
		transform: translateY(-4px);
		box-shadow: 0 8px 25px rgba(35, 55, 255, 0.4);
	}

	/* Visual */
	.image-wrapper {
		position: relative;
		transform-style: preserve-3d;
	}

	.profile-img {
		width: 300px;
		height: 300px;
		max-width: 80vw;
		max-height: 80vw;
		object-fit: cover;
		border-radius: 50%; /* 丸くする */
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1); /* 影をつける */
		border: 4px solid #fff;
		position: relative;
		z-index: 2;
		transition: transform 0.5s;
	}

	.profile-img:hover {
		transform: scale(1.05) rotate(2deg);
		border-color: var(--accent);
	}

	.profile-glow {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 340px;
		height: 340px;
		max-width: 90vw;
		max-height: 90vw;
		background: radial-gradient(
			circle,
			rgba(35, 55, 255, 0.1) 0%,
			transparent 70%
		);
		border-radius: 50%;
		z-index: 1;
		animation: pulse-glow 4s infinite alternate;
	}

	@keyframes pulse-glow {
		0% {
			opacity: 0.5;
			transform: translate(-50%, -50%) scale(0.9);
		}
		100% {
			opacity: 1;
			transform: translate(-50%, -50%) scale(1.1);
		}
	}

	.divider {
		margin: 4rem 0;
		border: 0;
		border-top: 1px solid #eee;
		opacity: 0.5;
	}

	/* --- 記事カードグリッド --- */
	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		margin-bottom: 2.5rem;
		border-bottom: 1px solid #eee;
		padding-bottom: 1rem;
	}
	.view-all {
		font-size: 0.95rem;
		color: var(--accent);
		text-decoration: none;
		font-weight: bold;
		transition: color 0.2s;
	}
	.view-all:hover {
		color: var(--accent-dark);
		text-decoration: underline;
	}

	.card-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2.5rem;
	}

	@media (max-width: 900px) {
		.card-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 2rem;
		}
	}

	@media (max-width: 600px) {
		.card-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}
	}
</style>
