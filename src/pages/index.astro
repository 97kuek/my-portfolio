---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

// ブログ記事を取得し、新しい順に並べ替えて「最新の3件」だけ取り出す
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 3);

// ★ここに自分のプロフィール画像のパスを指定（なければコメントアウトのままでOK）
// import profileImage from '../assets/profile.jpg';
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="hero-container">
				<div class="hero-content">
					<span class="greeting">Hello, I'm Keitaro.</span>
					<h1>Web Dev &<br/>Engineering</h1>
					<p class="bio">
						早稲田大学 基幹理工学部 情報通信学科 2年<br/>
						<strong>植木 敬太郎 (Keitaro Ueki)</strong>
					</p>
					<p class="description">
						人力飛行機・数値解析・ガジェットが好き。<br/>
						日々の学習記録や開発ログをまとめています。
					</p>
					
					<div class="links">
						<a href="/about" class="button primary">経歴・スキルを見る</a>
						<a href="/publications" class="button secondary">研究業績</a>
					</div>
				</div>
				
				<div class="hero-visual">
					<div class="placeholder-shape">
						<div class="circle"></div>
					</div>
				</div>
			</div>

			<hr class="divider" />

			<section class="latest-section">
				<div class="section-header">
					<h2>Latest Updates</h2>
					<a href="/blog" class="view-all">すべて見る &rarr;</a>
				</div>
				
				<div class="card-grid">
					{posts.map((post) => (
						<a href={`/blog/${post.slug}/`} class="card">
							<div class="card-image">
								{post.data.heroImage ? (
									<Image src={post.data.heroImage} width={400} height={200} alt="" />
								) : (
									<div class="no-image">No Image</div>
								)}
							</div>
							<div class="card-content">
								<span class="date">{post.data.pubDate.toLocaleDateString('ja-JP')}</span>
								<h3>{post.data.title}</h3>
							</div>
						</a>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	/* 全体のレイアウト調整 */
	main {
		width: 960px; /* 少し幅を広げる */
		max-width: calc(100% - 2em);
		margin: 0 auto;
		padding: 2em 0;
	}

	/* --- ヒーローセクション --- */
	.hero-container {
		display: flex;
		flex-direction: column-reverse;
		align-items: center;
		gap: 2rem;
		padding: 3rem 0;
		text-align: center;
	}
	
	/* PCサイズ以上でのレイアウト */
	@media (min-width: 768px) {
		.hero-container {
			flex-direction: row;
			justify-content: space-between;
			text-align: left;
			padding: 5rem 0;
		}
		.hero-content {
			flex: 1;
		}
		.hero-visual {
			flex: 1;
			display: flex;
			justify-content: center;
			align-items: center;
		}
	}

	.greeting {
		color: var(--accent);
		font-weight: bold;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		font-size: 0.9rem;
	}

	h1 {
		font-size: 3rem;
		line-height: 1.1;
		margin: 0.2em 0 0.5em 0;
		letter-spacing: -0.02em;
	}

	.bio {
		font-size: 1.1rem;
		font-weight: bold;
		margin-bottom: 0.5em;
	}
	.description {
		color: #666;
		line-height: 1.6;
		margin-bottom: 2rem;
	}

	/* ボタン */
	.links {
		display: flex;
		gap: 1rem;
		justify-content: center; /* スマホは中央 */
	}
	@media (min-width: 768px) {
		.links { justify-content: flex-start; } /* PCは左寄せ */
	}

	.button {
		padding: 0.8rem 1.5rem;
		text-decoration: none;
		border-radius: 50px; /* 丸みをつける */
		font-weight: bold;
		transition: all 0.2s ease;
		font-size: 0.95rem;
	}
	.primary {
		background: #222;
		color: #fff;
		box-shadow: 0 4px 10px rgba(0,0,0,0.2);
	}
	.primary:hover {
		background: #444;
		transform: translateY(-2px);
		box-shadow: 0 6px 15px rgba(0,0,0,0.3);
	}
	.secondary {
		background: transparent;
		color: #333;
		border: 1px solid #ddd;
	}
	.secondary:hover {
		background: #f4f4f5;
		border-color: #bbb;
	}

	/* プレースホルダー画像（円形の装飾） */
	.placeholder-shape {
		width: 280px;
		height: 280px;
		background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
		border-radius: 50%; /* 丸にする */
		position: relative;
		overflow: hidden;
	}
	/* ここに写真を入れる場合 */
	.profile-img {
		width: 280px;
		height: 280px;
		object-fit: cover;
		border-radius: 50%;
		box-shadow: 0 10px 25px rgba(0,0,0,0.1);
	}

	.divider {
		margin: 3rem 0;
		border: 0;
		border-top: 1px solid #eee;
	}

	/* --- 記事カードグリッド --- */
	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		margin-bottom: 2rem;
	}
	.view-all {
		font-size: 0.9rem;
		color: var(--accent);
		text-decoration: none;
	}
	
	.card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}

	.card {
		text-decoration: none;
		color: inherit;
		background: #fff; /* 背景色 */
		border-radius: 12px;
		overflow: hidden;
		transition: transform 0.2s, box-shadow 0.2s;
		border: 1px solid #f0f0f0;
	}
	.card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 20px rgba(0,0,0,0.05);
	}

	.card-image {
		width: 100%;
		height: 160px; /* 画像の高さ固定 */
		background: #f9f9f9;
		overflow: hidden;
	}
	.card-image img {
		width: 100%;
		height: 100%;
		object-fit: cover; /* 枠いっぱいにトリミング */
	}
	.no-image {
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: #ccc;
		font-size: 0.9rem;
	}

	.card-content {
		padding: 1.2rem;
	}
	.card-content h3 {
		margin: 0.5rem 0 0;
		font-size: 1.1rem;
		line-height: 1.4;
	}
	.date {
		font-size: 0.85rem;
		color: #888;
	}
</style>