---
import "@pagefind/default-ui/css/ui.css";

interface Props {
    type?: "modal" | "trigger";
}

const { type = "modal" } = Astro.props;
---

{
    type === "trigger" ? (
        <button
            data-open-modal-trigger
            aria-label="検索を開く"
            title="検索を開く (Command+K)"
            class="search-trigger"
        >
            <svg
                aria-hidden="true"
                class="search-icon"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <circle cx="11" cy="11" r="8" />
                <line x1="21" y1="21" x2="16.65" y2="16.65" />
            </svg>
            <span class="sr-only">検索</span>
        </button>
    ) : (
        <site-search>
            <dialog aria-label="記事を検索">
                <div class="dialog-frame">
                    <div class="dialog-header">
                        <span class="dialog-title">検索</span>
                        <button
                            data-close-modal
                            class="close-button"
                            aria-label="閉じる"
                        >
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <line x1="18" y1="6" x2="6" y2="18" />
                                <line x1="6" y1="6" x2="18" y2="18" />
                            </svg>
                        </button>
                    </div>
                    <div class="search-container" id="search" />
                </div>
            </dialog>
        </site-search>
    )
}

<script>
    // Define the logic only once or ensure it handles the modal mode
    class SiteSearch extends HTMLElement {
        connectedCallback() {
            const closeBtn = this.querySelector<HTMLButtonElement>(
                "button[data-close-modal]",
            );
            const dialog = this.querySelector<HTMLDialogElement>("dialog");
            const dialogFrame =
                this.querySelector<HTMLDivElement>(".dialog-frame");

            if (!closeBtn || !dialog || !dialogFrame) return;

            const onOpen = (event?: Event) => {
                event?.preventDefault();
                if (dialog.open) return;
                dialog.showModal();
                const input = dialog.querySelector<HTMLInputElement>(
                    ".pagefind-ui__search-input",
                );
                if (input) {
                    input.focus();
                } else {
                    setTimeout(() => {
                        const input = dialog.querySelector<HTMLInputElement>(
                            ".pagefind-ui__search-input",
                        );
                        input?.focus();
                    }, 100);
                }
            };

            const onClose = (event?: Event) => {
                event?.preventDefault();
                dialog.close();
            };

            closeBtn.addEventListener("click", onClose);
            dialog.addEventListener("click", (e) => {
                if (e.target === dialog) {
                    dialog.close();
                }
            });

            // Global Event Listener for Triggers
            // We attach to window to catch events from any button
            const handleOpenEvent = (e: CustomEvent) => onOpen(e);
            window.addEventListener(
                "open-search-modal",
                handleOpenEvent as EventListener,
            );

            // Keyboard shortcuts
            const handleKeydown = (e: KeyboardEvent) => {
                if (e.key === "Escape" && dialog.open) {
                    // default logic usually works
                }
                const isCmdK = (e.metaKey || e.ctrlKey) && e.key === "k";
                const isSlash =
                    e.key === "/" &&
                    !["INPUT", "TEXTAREA"].includes(
                        (e.target as HTMLElement).tagName,
                    );

                if ((isCmdK || isSlash) && !dialog.open) {
                    e.preventDefault();
                    onOpen();
                }
            };
            window.addEventListener("keydown", handleKeydown);

            // Initialize Pagefind
            // Using ID 'search' is okay if there is only ONE modal in the DOM.
            const initPagefind = async () => {
                const searchDiv = this.querySelector("#search");
                if (!searchDiv || searchDiv.innerHTML !== "") return;

                const { PagefindUI } = await import("@pagefind/default-ui");
                new PagefindUI({
                    element: searchDiv,
                    showSubResults: true,
                    showImages: false,
                    translations: {
                        placeholder: "記事を検索...",
                        clear_search: "クリア",
                        zero_results: '"[SEARCH_TERM]" の検索結果はありません',
                        many_results: '"[SEARCH_TERM]" の検索結果: [COUNT] 件',
                        one_result: '"[SEARCH_TERM]" の検索結果: [COUNT] 件',
                    },
                });
            };

            const loadHandler = () => initPagefind();
            // Listen to both for robustness
            window.addEventListener("DOMContentLoaded", loadHandler);
            document.addEventListener("astro:page-load", loadHandler);
            initPagefind();
        }
    }

    if (!customElements.get("site-search")) {
        customElements.define("site-search", SiteSearch);
    }

    // Trigger Logic (applied to buttons anywhere)
    // We check if the script has already added the listener to avoid duplicates?
    // But this script runs inside the component. If multiple components load, valid?
    // But 'trigger' mode doesn't render the script block? No, Astro scripts are hoisted or scoped.
    // If the script is inside the component, it runs when component is used.
    // We should guard the global click listener.
    if (!window._searchTriggerListenerAttached) {
        document.addEventListener("click", (e) => {
            const target = (e.target as HTMLElement).closest(
                "button[data-open-modal-trigger]",
            );
            if (target) {
                window.dispatchEvent(new CustomEvent("open-search-modal"));
            }
        });
        window._searchTriggerListenerAttached = true;
    }
    // Add type definition to Window interface to avoid TS error?
    // Typescript might complain but in Astro script tag it's loose or we can cast as any.
    declare global {
        interface Window {
            _searchTriggerListenerAttached: boolean;
        }
    }
</script>

<style>
    site-search {
        display: contents;
    }

    .search-trigger {
        background: transparent;
        border: none;
        color: rgb(var(--gray-dark));
        cursor: pointer;
        padding: 0.5rem;
        border-radius: 50%;
        transition:
            background-color 0.2s,
            color 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .search-trigger:hover {
        background-color: rgba(var(--accent), 0.1);
        color: var(--accent);
    }

    dialog {
        margin: 0;
        padding: 0;
        position: fixed;
        inset: 0;
        width: 100vw;
        height: 100vh;
        max-width: 100vw;
        max-height: 100vh;
        background: transparent;
        border: none;
        z-index: 1000;
        display: none;
        align-items: start;
        justify-content: center;
        padding-top: 10vh;
        opacity: 0;
        transition:
            opacity 0.2s ease-out,
            display 0.2s allow-discrete;
    }

    dialog[open] {
        display: flex;
        opacity: 1;
    }

    dialog::backdrop {
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(4px);
        opacity: 0;
        transition: opacity 0.2s ease-out;
    }
    dialog[open]::backdrop {
        opacity: 1;
    }

    .dialog-frame {
        width: 90%;
        max-width: 600px;
        background: #fff;
        border-radius: 12px;
        box-shadow:
            0 20px 25px -5px rgba(0, 0, 0, 0.1),
            0 10px 10px -5px rgba(0, 0, 0, 0.04);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        max-height: 80vh;
    }

    .dialog-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .dialog-title {
        font-weight: bold;
        font-size: 1.1rem;
        color: rgb(var(--black));
    }

    .close-button {
        background: transparent;
        border: none;
        color: rgb(var(--gray));
        cursor: pointer;
        padding: 0.2rem;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .close-button:hover {
        background: rgba(0, 0, 0, 0.05);
        color: rgb(var(--black));
    }

    .search-container {
        padding: 1rem;
        overflow-y: auto;
        flex: 1;
    }

    /* Pagefind UI Customization */
    :global(.pagefind-ui__search-input) {
        background-color: transparent !important;
        border: 2px solid var(--accent) !important;
        border-radius: 8px !important;
        font-size: 1.1rem !important;
        padding: 1rem !important;
        box-shadow: none !important;
        color: rgb(var(--black)) !important;
    }
    :global(.pagefind-ui__drawer) {
        box-shadow: none !important;
        border: none !important;
        background: transparent !important;
        gap: 1rem !important;
    }
    :global(.pagefind-ui__result) {
        border: none !important;
        padding: 0.8rem 0 !important;
    }
    :global(.pagefind-ui__result-link) {
        color: var(--accent) !important;
        text-decoration: none;
        font-weight: 600;
    }
    :global(.pagefind-ui__result-excerpt) {
        color: rgb(var(--gray-dark)) !important;
        font-size: 0.9rem !important;
        margin-top: 0.3rem !important;
    }
    :global(.pagefind-ui__message) {
        margin-top: 1rem !important;
        color: rgb(var(--gray)) !important;
    }

    @media (max-width: 600px) {
        dialog {
            padding-top: 0;
            align-items: flex-end;
        }
        .dialog-frame {
            width: 100%;
            max-width: 100%;
            height: 100%;
            max-height: 100%;
            border-radius: 0;
        }
    }
</style>
