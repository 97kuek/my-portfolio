---
import "@pagefind/default-ui/css/ui.css";
---

<site-search>
    <button
        data-open-modal
        disabled
        aria-label="検索を開く"
        title="検索を開く (Command+K)"
    >
        <svg
            aria-hidden="true"
            class="search-icon"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <circle cx="11" cy="11" r="8"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
        <span class="sr-only">検索</span>
    </button>

    <dialog aria-label="記事を検索">
        <div class="dialog-frame">
            <div class="dialog-header">
                <span class="dialog-title">検索</span>
                <button
                    data-close-modal
                    class="close-button"
                    aria-label="閉じる"
                >
                    <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <div class="search-container" id="search"></div>
        </div>
    </dialog>
</site-search>

<script>
    class SiteSearch extends HTMLElement {
        constructor() {
            super();
            const openBtn = this.querySelector<HTMLButtonElement>(
                "button[data-open-modal]",
            );
            const closeBtn = this.querySelector<HTMLButtonElement>(
                "button[data-close-modal]",
            );
            const dialog = this.querySelector<HTMLDialogElement>("dialog");
            const dialogFrame =
                this.querySelector<HTMLDivElement>(".dialog-frame");

            if (!openBtn || !closeBtn || !dialog || !dialogFrame) return;

            // 初期化完了時にボタンを有効化
            openBtn.disabled = false;

            // ダイアログを開く
            const onOpen = (event?: Event) => {
                event?.preventDefault(); // リロードなどを防ぐ
                dialog.showModal();
                // Pagefindの入力欄にフォーカス
                const input = dialog.querySelector<HTMLInputElement>(
                    ".pagefind-ui__search-input",
                );
                if (input) {
                    input.focus();
                } else {
                    // まだ生成されていない場合のフォールバック（MutationObserverが確実だが簡易的に）
                    setTimeout(() => {
                        const input = dialog.querySelector<HTMLInputElement>(
                            ".pagefind-ui__search-input",
                        );
                        input?.focus();
                    }, 100);
                }
            };

            // ダイアログを閉じる
            const onClose = (event?: Event) => {
                event?.preventDefault();
                dialog.close();
            };

            // フレーム外クリックで閉じる
            const onBackdropClick = (event: MouseEvent) => {
                const rect = dialog.getBoundingClientRect();
                const isInDialog =
                    rect.top <= event.clientY &&
                    event.clientY <= rect.top + rect.height &&
                    rect.left <= event.clientX &&
                    event.clientX <= rect.left + rect.width;
                if (!isInDialog) {
                    dialog.close();
                }
            };

            openBtn.addEventListener("click", onOpen);
            closeBtn.addEventListener("click", onClose);
            dialog.addEventListener("click", (e) => {
                if (e.target === dialog) {
                    dialog.close();
                }
            });

            // キーボードショートカット (Command/Ctrl + K / /)
            window.addEventListener("keydown", (e) => {
                if (e.key === "Escape" && dialog.open) {
                    // dialogのデフォルト動作で閉じるが念のため
                }
                // 検索を開く (Cmd+K or Ctrl+K or /)
                const isCmdK = (e.metaKey || e.ctrlKey) && e.key === "k";
                const isSlash =
                    e.key === "/" &&
                    !["INPUT", "TEXTAREA"].includes(
                        (e.target as HTMLElement).tagName,
                    );

                if ((isCmdK || isSlash) && !dialog.open) {
                    e.preventDefault(); // "/"の入力をキャンセル
                    onOpen();
                }
            });

            // Pagefindの初期化
            // すでに初期化されている場合はスキップ、または再利用
            // ここではdialogが開かれる前に初期化しておき、検索を即座に行えるようにする
            // あるいは開くときにlazy loadするか。
            // Astro View Transitionsを考慮して毎回初期化チェック
            window.addEventListener("DOMContentLoaded", () => {
                if (document.querySelector("#search .pagefind-ui")) return;
                this.initPagefind();
            });
            // View Transitions用
            document.addEventListener("astro:page-load", () => {
                if (document.querySelector("#search .pagefind-ui")) return;
                this.initPagefind();
            });

            // 初回実行
            this.initPagefind();
        }

        async initPagefind() {
            const searchDiv = this.querySelector("#search");
            if (!searchDiv || searchDiv.innerHTML !== "") return;

            const { PagefindUI } = await import("@pagefind/default-ui");
            new PagefindUI({
                element: searchDiv,
                showSubResults: true,
                showImages: false,
                translations: {
                    placeholder: "記事を検索...",
                    clear_search: "クリア",
                    zero_results: '"[SEARCH_TERM]" の検索結果はありません',
                    many_results: '"[SEARCH_TERM]" の検索結果: [COUNT] 件',
                    one_result: '"[SEARCH_TERM]" の検索結果: [COUNT] 件',
                },
            });
        }
    }

    customElements.define("site-search", SiteSearch);
</script>

<style>
    site-search {
        display: inline-block;
    }

    button[data-open-modal] {
        background: transparent;
        border: none;
        color: rgb(var(--gray-dark));
        cursor: pointer;
        padding: 0.5rem;
        border-radius: 50%;
        transition:
            background-color 0.2s,
            color 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    button[data-open-modal]:hover {
        background-color: rgba(var(--accent), 0.1);
        color: var(--accent);
    }

    button[data-open-modal]:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    dialog {
        margin: 0;
        padding: 0;
        position: fixed;
        inset: 0;
        width: 100vw;
        height: 100vh;
        max-width: 100vw;
        max-height: 100vh;
        background: transparent; /* backdrop handles background */
        border: none;
        z-index: 1000;
        /* display is handled by browser (none when closed, block when open). 
		   We use flex for layout ONLY when open. */
        display: none;
        align-items: start;
        justify-content: center;
        padding-top: 10vh;
        opacity: 0;
        transition:
            opacity 0.2s ease-out,
            display 0.2s allow-discrete;
    }

    dialog[open] {
        display: flex;
        opacity: 1;
    }

    /* Customize backdrop */
    dialog::backdrop {
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(4px);
        opacity: 0;
        transition: opacity 0.2s ease-out;
    }
    dialog[open]::backdrop {
        opacity: 1;
    }

    .dialog-frame {
        width: 90%;
        max-width: 600px;
        background: #fff; /* ライトテーマ前提 */
        border-radius: 12px;
        box-shadow:
            0 20px 25px -5px rgba(0, 0, 0, 0.1),
            0 10px 10px -5px rgba(0, 0, 0, 0.04);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        max-height: 80vh;
    }

    .dialog-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .dialog-title {
        font-weight: bold;
        font-size: 1.1rem;
        color: rgb(var(--black));
    }

    .close-button {
        background: transparent;
        border: none;
        color: rgb(var(--gray));
        cursor: pointer;
        padding: 0.2rem;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .close-button:hover {
        background: rgba(0, 0, 0, 0.05);
        color: rgb(var(--black));
    }

    .search-container {
        padding: 1rem;
        overflow-y: auto;
        flex: 1;
    }

    /* Pagefind UI Customization for this modal context */
    :global(.pagefind-ui__search-input) {
        background-color: transparent !important;
        border: 2px solid var(--accent) !important;
        border-radius: 8px !important;
        font-size: 1.1rem !important;
        padding: 1rem !important;
        box-shadow: none !important;
        color: rgb(var(--black)) !important;
    }
    :global(.pagefind-ui__drawer) {
        box-shadow: none !important;
        border: none !important;
        background: transparent !important;
        gap: 1rem !important;
    }
    :global(.pagefind-ui__result) {
        border: none !important;
        padding: 0.8rem 0 !important;
    }
    :global(.pagefind-ui__result-link) {
        color: var(--accent) !important;
        text-decoration: none;
        font-weight: 600;
    }
    :global(.pagefind-ui__result-excerpt) {
        color: rgb(var(--gray-dark)) !important;
        font-size: 0.9rem !important;
        margin-top: 0.3rem !important;
    }
    :global(.pagefind-ui__message) {
        margin-top: 1rem !important;
        color: rgb(var(--gray)) !important;
    }

    @media (max-width: 600px) {
        dialog {
            padding-top: 0;
            align-items: flex-end; /* 下から出す、あるいはFullにする */
        }
        .dialog-frame {
            width: 100%;
            max-width: 100%;
            height: 100%;
            max-height: 100%;
            border-radius: 0;
        }
    }
</style>
