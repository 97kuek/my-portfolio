---
import "@pagefind/default-ui/css/ui.css";

interface Props {
    type?: "modal" | "trigger";
}

const { type = "modal" } = Astro.props;
---

{
    type === "trigger" ? (
        <button
            data-open-modal-trigger
            aria-label="検索を開く"
            title="検索を開く (Command+K)"
            class="search-trigger"
        >
            <svg
                aria-hidden="true"
                class="search-icon"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <circle cx="11" cy="11" r="8" />
                <line x1="21" y1="21" x2="16.65" y2="16.65" />
            </svg>
            <span class="sr-only">検索</span>
        </button>
    ) : (
        <site-search>
            <dialog aria-label="記事を検索">
                <div class="dialog-frame">
                    <div class="dialog-header">
                        <span class="dialog-title">検索</span>
                        <button
                            data-close-modal
                            class="close-button"
                            aria-label="閉じる"
                        >
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <line x1="18" y1="6" x2="6" y2="18" />
                                <line x1="6" y1="6" x2="18" y2="18" />
                            </svg>
                        </button>
                    </div>
                    <div class="search-container" id="search" />
                </div>
            </dialog>
        </site-search>
    )
}

<script>
    class SiteSearch extends HTMLElement {
        private closeBtn: HTMLButtonElement | null = null;
        private dialog: HTMLDialogElement | null = null;
        private dialogFrame: HTMLDivElement | null = null;
        private isInitializing = false;
        private abortController = new AbortController();

        connectedCallback() {
            // Cleanup previous listeners if any (though connectedCallback usually implies fresh or moved)
            this.abortController.abort();
            this.abortController = new AbortController();
            const signal = this.abortController.signal;

            this.closeBtn = this.querySelector<HTMLButtonElement>(
                "button[data-close-modal]",
            );
            this.dialog = this.querySelector<HTMLDialogElement>("dialog");
            this.dialogFrame =
                this.querySelector<HTMLDivElement>(".dialog-frame");

            if (!this.closeBtn || !this.dialog || !this.dialogFrame) return;

            // Close button
            this.closeBtn.addEventListener("click", (e) => this.onClose(e), {
                signal,
            });

            // Dialog backdrop click
            this.dialog.addEventListener(
                "click",
                (e) => {
                    if (e.target === this.dialog) {
                        this.onClose();
                    }
                },
                { signal },
            );

            // Global Event Listeners
            // Use signal to auto-remove when disconnected
            window.addEventListener(
                "open-search-modal",
                (e) => this.onOpen(e),
                { signal },
            );
            window.addEventListener("keydown", (e) => this.handleKeydown(e), {
                signal,
            });

            // Initialize
            this.initPagefind();
        }

        disconnectedCallback() {
            this.abortController.abort();
        }

        onOpen(event?: Event) {
            event?.preventDefault();
            if (!this.dialog || this.dialog.open) return;

            this.dialog.showModal();

            const focusInput = () => {
                const input = this.dialog?.querySelector<HTMLInputElement>(
                    ".pagefind-ui__search-input",
                );
                input?.focus();
            };

            focusInput();
            // Fallback if not rendered yet
            setTimeout(focusInput, 100);
        }

        onClose(event?: Event) {
            event?.preventDefault();
            this.dialog?.close();
        }

        handleKeydown(e: KeyboardEvent) {
            if (e.key === "Escape" && this.dialog?.open) {
                // Native escape handling usually works, but explicit is fine
            }

            const isCmdK = (e.metaKey || e.ctrlKey) && e.key === "k";
            const isSlash =
                e.key === "/" &&
                !["INPUT", "TEXTAREA"].includes(
                    (e.target as HTMLElement).tagName,
                );

            if ((isCmdK || isSlash) && !this.dialog?.open) {
                e.preventDefault();
                this.onOpen();
            }
        }

        async initPagefind() {
            if (this.isInitializing) return;
            const searchDiv = this.querySelector("#search");
            if (!searchDiv || searchDiv.innerHTML !== "") return;

            this.isInitializing = true;
            try {
                const { PagefindUI } = await import("@pagefind/default-ui");
                // Double check after await
                if (searchDiv.innerHTML !== "") return;

                new PagefindUI({
                    element: searchDiv,
                    showSubResults: true,
                    showImages: false,
                    translations: {
                        placeholder: "記事を検索...",
                        clear_search: "クリア",
                        zero_results: '"[SEARCH_TERM]" の検索結果はありません',
                        many_results: '"[SEARCH_TERM]" の検索結果: [COUNT] 件',
                        one_result: '"[SEARCH_TERM]" の検索結果: [COUNT] 件',
                    },
                });
            } finally {
                this.isInitializing = false;
            }
        }
    }

    if (!customElements.get("site-search")) {
        customElements.define("site-search", SiteSearch);
    }

    // Global Trigger Logic - Safe to run multiple times as it just delegates
    // But we should ensure we don't bind multiple times if this script re-runs.
    // In Astro, inline scripts in components might re-run.
    // Use a unique property on window to ensure singleton.
    if (typeof window !== "undefined" && !window.hasAttachedSearchTrigger) {
        document.addEventListener("click", (e) => {
            const target = (e.target as HTMLElement).closest(
                "button[data-open-modal-trigger]",
            );
            if (target) {
                window.dispatchEvent(new CustomEvent("open-search-modal"));
            }
        });
        window.hasAttachedSearchTrigger = true;
    }

    declare global {
        interface Window {
            hasAttachedSearchTrigger?: boolean;
        }
    }
</script>

<style>
    site-search {
        display: contents;
    }

    .search-trigger {
        background: transparent;
        border: none;
        color: rgb(var(--gray-dark));
        cursor: pointer;
        padding: 0.5rem;
        border-radius: 50%;
        transition:
            background-color 0.2s,
            color 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .search-trigger:hover {
        background-color: rgba(var(--accent), 0.1);
        color: var(--accent);
    }

    dialog {
        margin: 0;
        padding: 0;
        position: fixed;
        inset: 0;
        width: 100vw;
        height: 100vh;
        max-width: 100vw;
        max-height: 100vh;
        background: transparent;
        border: none;
        z-index: 1000;
        display: none;
        align-items: start;
        justify-content: center;
        padding-top: 10vh;
        opacity: 0;
        transition:
            opacity 0.2s ease-out,
            display 0.2s allow-discrete;
    }

    dialog[open] {
        display: flex;
        opacity: 1;
    }

    dialog::backdrop {
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(4px);
        opacity: 0;
        transition: opacity 0.2s ease-out;
    }
    dialog[open]::backdrop {
        opacity: 1;
    }

    .dialog-frame {
        width: 90%;
        max-width: 600px;
        background: #fff;
        border-radius: 12px;
        box-shadow:
            0 20px 25px -5px rgba(0, 0, 0, 0.1),
            0 10px 10px -5px rgba(0, 0, 0, 0.04);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        max-height: 80vh;
    }

    .dialog-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .dialog-title {
        font-weight: bold;
        font-size: 1.1rem;
        color: rgb(var(--black));
    }

    .close-button {
        background: transparent;
        border: none;
        color: rgb(var(--gray));
        cursor: pointer;
        padding: 0.2rem;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .close-button:hover {
        background: rgba(0, 0, 0, 0.05);
        color: rgb(var(--black));
    }

    .search-container {
        padding: 1rem;
        overflow-y: auto;
        flex: 1;
    }

    /* Pagefind UI Customization */
    :global(.pagefind-ui__search-input) {
        background-color: transparent !important;
        border: 2px solid var(--accent) !important;
        border-radius: 8px !important;
        font-size: 1.1rem !important;
        padding: 1rem !important;
        box-shadow: none !important;
        color: rgb(var(--black)) !important;
    }
    :global(.pagefind-ui__drawer) {
        box-shadow: none !important;
        border: none !important;
        background: transparent !important;
        gap: 1rem !important;
    }
    :global(.pagefind-ui__result) {
        border: none !important;
        padding: 0.8rem 0 !important;
    }
    :global(.pagefind-ui__result-link) {
        color: var(--accent) !important;
        text-decoration: none;
        font-weight: 600;
    }
    :global(.pagefind-ui__result-excerpt) {
        color: rgb(var(--gray-dark)) !important;
        font-size: 0.9rem !important;
        margin-top: 0.3rem !important;
    }
    :global(.pagefind-ui__message) {
        margin-top: 1rem !important;
        color: rgb(var(--gray)) !important;
    }

    @media (max-width: 600px) {
        dialog {
            padding-top: 0;
            align-items: flex-end;
        }
        .dialog-frame {
            width: 100%;
            max-width: 100%;
            height: 100%;
            max-height: 100%;
            border-radius: 0;
        }
    }
</style>
