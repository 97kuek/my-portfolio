</header>

<script>
	function initMenu() {
		const menuToggle = document.getElementById("menu-toggle");
		const mobileMenu = document.getElementById("mobile-menu");
		const overlay = document.getElementById("mobile-menu-overlay");

		if (!menuToggle || !mobileMenu || !overlay) return;

		// 既にイベントリスナーが登録されている可能性を考慮して、新しい関数を作成せずに
		// クリーンアップするか、あるいはシンプルな実装にします。
		// AstroのView Transitionsではページ遷移ごとにスクリプトが再実行される場合と
		// イベントだけ発火する場合があります。

		const toggleMenu = () => {
			const isOpen = mobileMenu.classList.contains("open");
			if (isOpen) {
				mobileMenu.classList.remove("open");
				overlay.classList.remove("open");
				menuToggle.classList.remove("active");
				document.body.style.overflow = "";
			} else {
				mobileMenu.classList.add("open");
				overlay.classList.add("open");
				menuToggle.classList.add("active");
				document.body.style.overflow = "hidden";
			}
		};

		// イベントリスナーの重複登録を防ぐためのクローン交換（簡易的な方法）
		// または removeEventListener を正確に行う必要がありますが、
		// ここでは要素取得ごとに新規設定する形をとります。

		// Reset state on page load (important for back button navigation)
		mobileMenu.classList.remove("open");
		overlay.classList.remove("open");
		menuToggle.classList.remove("active");
		document.body.style.overflow = "";

		menuToggle.onclick = toggleMenu;
		overlay.onclick = toggleMenu;

		// リンククリック時にメニューを閉じる
		const links = mobileMenu.querySelectorAll("a");
		links.forEach((link) => {
			link.addEventListener("click", () => {
				if (mobileMenu.classList.contains("open")) {
					toggleMenu();
				}
			});
		});
	}

	// View Transitionsに対応
	document.addEventListener("astro:page-load", initMenu);
</script>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--header-bg);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
		border-bottom: 1px solid rgba(0, 0, 0, 0.05);
		transition: all 0.3s ease;
		position: sticky;
		top: 0;
		z-index: 100;
	}
	h2 {
		margin: 0;
		font-size: 1.2em;
		font-weight: 700;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		background: var(--primary-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 70px;
	}

	/* Desktop Menu Styles */
	.desktop-menu {
		display: flex;
		align-items: center;
		gap: 1.5rem;
	}

	.internal-links {
		display: flex;
		gap: 1rem;
	}
	.internal-links a {
		padding: 0.5em 1em;
		color: rgb(var(--gray-dark));
		border-bottom: 2px solid transparent;
		text-decoration: none;
		transition: all 0.2s;
		font-weight: 500;
	}
	.internal-links a:hover {
		color: var(--accent);
		background: rgba(var(--accent), 0.05);
		border-radius: 6px;
	}
	.internal-links a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
		color: var(--accent);
	}

	.social-links,
	.social-links a {
		display: flex;
		gap: 0.5rem;
		align-items: center;
		color: rgb(var(--gray-dark));
	}
	.social-links a:hover {
		color: var(--accent);
	}

	/* Mobile Menu Toggle Button */
	.menu-toggle {
		display: none;
		flex-direction: column;
		justify-content: space-between;
		width: 30px;
		height: 20px;
		background: none;
		border: none;
		cursor: pointer;
		z-index: 110;
		padding: 0;
	}
	.bar {
		width: 100%;
		height: 2px;
		background-color: rgb(var(--black));
		transition: all 0.3s ease;
		border-radius: 2px;
	}

	/* Hamburger Animation */
	.menu-toggle.active .top {
		transform: rotate(45deg) translate(5px, 6px);
	}
	.menu-toggle.active .middle {
		opacity: 0;
	}
	.menu-toggle.active .bottom {
		transform: rotate(-45deg) translate(5px, -6px);
	}

	/* Mobile Menu Drawer */
	.mobile-menu {
		position: fixed;
		top: 0;
		right: -300px;
		width: 300px;
		height: 100vh;
		background: var(--header-bg);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		box-shadow: -5px 0 15px rgba(0, 0, 0, 0.1);
		transition:
			right 0.3s ease,
			visibility 0.3s ease,
			opacity 0.3s ease;
		z-index: 105;
		display: flex;
		flex-direction: column;
		padding: 80px 2rem 2rem;
		border-left: 1px solid rgba(0, 0, 0, 0.05);
		visibility: hidden;
		opacity: 0;
	}
	.mobile-menu.open {
		right: 0;
		visibility: visible;
		opacity: 1;
	}

	/* ... content ... */

	@media (min-width: 769px) {
		.mobile-menu {
			display: none;
		}
	}

	.mobile-menu-content {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.mobile-links {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	.mobile-links a {
		font-size: 1.2rem;
		font-weight: bold;
		color: rgb(var(--black));
		text-decoration: none;
		padding: 0.5rem 0;
		border-bottom: 1px solid rgba(0, 0, 0, 0.05);
	}
	.mobile-links a.active {
		color: var(--accent);
		border-bottom-color: var(--accent);
	}

	.mobile-socials {
		display: flex;
		flex-direction: column;
		gap: 0.8rem;
		margin-top: auto;
	}
	.mobile-socials a {
		text-decoration: none;
		color: rgb(var(--gray));
		font-size: 0.9rem;
		transition: color 0.2s;
	}
	.mobile-socials a:hover {
		color: var(--accent);
	}

	/* Overlay */
	.mobile-menu-overlay {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		background: rgba(0, 0, 0, 0.3);
		opacity: 0;
		visibility: hidden;
		transition: all 0.3s ease;
		z-index: 104;
		backdrop-filter: blur(2px);
	}
	.mobile-menu-overlay.open {
		opacity: 1;
		visibility: visible;
	}

	@media (max-width: 768px) {
		.desktop-menu {
			display: none;
		}
		.menu-toggle {
			display: flex;
		}
		nav {
			/* Reset for mobile */
			justify-content: space-between;
			flex-direction: row;
			height: 60px;
			padding: 0;
		}
	}
</style>
